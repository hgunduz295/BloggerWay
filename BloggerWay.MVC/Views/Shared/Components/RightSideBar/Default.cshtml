@using BloggerWay.Entities.Concrete
@model BloggerWay.MVC.Models.RightSideBarViewModel
<div class="row-cols-md-6">

    
    <div style="background-color:#007bff"  class="card my-auto">
        <h5 style="color:white" class="card-header">Arama</h5>
        <div class="card-body">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Aramak istenen anahtar kelime...">
                <span class="input-group-append">
                    <button style="background-color:yellow"  class="btn btn-info" type="button"><p style="color:black">Ara!</p></button>
                </span>
            </div>
        </div>
    </div>
</div>        


    <div style="background-color:#007bff" class="widget widget-catgs my-4">
              <ul style="color:white"class="catgs-links">
                            
                        </ul>
        <h3 class="widget-title">Kategoriler</h3>
        <ul style="color:white"class="catgs-links">
        <li><a style="color:white"  href="~/Home/Index">Hepsi</a></li>
            @foreach (var category in Model.Categories)
            {
                <li><a style="color:white" asp-controller="Home" asp-action="Index" href="~/?categoryId=@category.Id">@category.Name</a></li>
            }
        </ul>
    </div>

    <!-- Side Widget -->
    <div style="background-color:#007bff" class="widget widget-catgs my-4">
        <h5  class="widget-title">En Çok Okunan Makaleler</h5>
        <div style="background-color: #007bff"class="catgs-links">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        @for (int i = 0; i < Model.Articles.Count; i++)
                        {
                            if (i%2==0)
                            {
                                <li style="background-color: #007bff" class="list-group-item list-group-item">
                                    <a style="color:lightyellow" href="~/Article/Detail?articleId=@Model.Articles[i].Id">@Model.Articles[i].Title</a>
                               </li>
                            }
                            else
                            {
                                <li style="background-color: #007bff" class="list-group-item list-group-item">
                                    <a style="color:yellow" href="~/Article/Detail?articleId=@Model.Articles[i].Id">@Model.Articles[i].Title</a>
                                </li>
                            }
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>


