@using BloggerWay.Entities.Concrete
@model BloggerWay.MVC.Models.RightSideBarViewModel

<div class="row-cols-md-4">

    
    <div style="background-color:whitesmoke"  class="card my-auto">
        <h5  style="color:darkslategrey" style="color:black" class="widget-title">Arama</h5>
        <div class="card-body">
          <form asp-controller="Article" asp-action="Search" method="get">
            <div class="input-group">
                <input type="text" name="keyword" class="form-control" placeholder="Aramak istenen kelime...">
                <span class="input-group-append ">
                    <button style="background-color:#c47941"  class="btn btn-info" type="submit"><p style="color:white">Ara!</p></button>
                </span>
            </div>
            </form>
        </div>
    </div>
</div>        


    <div style="background-color:whitesmoke" class="widget widget-catgs my-4">
              <ul style="color:black"class="catgs-links">
                            
                        </ul>
        <h3 style="color:darkslategrey" class="widget-title">Kategoriler</h3>
    <br />
        <ul style="color:whitesmoke"class="catgs-links">
               <li class="list-group-item" style="background-color:whitesmoke"><a style="color:black"  asp-controller="Home" asp-action="Index">Hepsi</a></li>
            @foreach (var category in Model.Categories)
            {
               <li style="background-color:whitesmoke" class="list-group-item">
                                <a a style="color:black" asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id">@category.Name</a>
                            </li>
            }
        </ul>
    </div>

    <!-- Side Widget -->
    <div style="background-color:whitesmoke" class="widget widget-catgs my-4">
        <h5 style="color:darkslategrey" class="widget-title">En Çok Okunan Makaleler</h5>
        <div style="background-color: black"class="catgs-links">
            <div class="row">
                <div class="col-lg-12">
                    <ul  class="list-group">
                        @for (int i = 0; i < Model.Articles.Count; i++)
                        {
                            if (i%2==0)
                            {
                     <li style="background-color: whitesmoke" class="list-group-item list-group-item-primary">
                                    <a style="color:black" asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.Articles[i].Id">@Model.Articles[i].Title</a>
                               </li>
                            }
                            else
                            {
                             <li style="background-color: whitesmoke" class="list-group-item list-group-item-info">
                                    <a style="color:#c47941" asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.Articles[i].Id">@Model.Articles[i].Title</a>
                                </li>
                            }
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>


