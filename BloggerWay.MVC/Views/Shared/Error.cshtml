@using BloggerWay.Shared.Entities.Concrete
@{
    Layout = "_ErrorLayout";
    ViewBag.Title = "Sunucu Hatası (500)"; // Veritabanı Hatası
    MvcErrorModel errorModel = ViewData["MvcErrorModel"] as MvcErrorModel;
}
<div class="col-lg-12">
    <div class="text-center mt-4">
        <h1 style="color:white" class="display-1">500</h1>
        <p style="color:white" class="lead">@errorModel.Message</p>
        @if (errorModel.Detail != null)
        {
            <p style="color:white" class="lead">@errorModel.Detail</p>
        }
        <a asp-controller="Home" asp-action="Index" class="text-warning">
            <i style="color:orange" class="fas fa-arrow-left mr-1"></i>
            Anasayfa'ya dönmek için tıklayınız.
        </a>
    </div>
</div>