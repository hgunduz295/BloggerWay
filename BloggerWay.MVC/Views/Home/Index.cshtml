@using System.Text.RegularExpressions
@model BloggerWay.Entities.Dtos.ArticleListDto
@{
    ViewBag.Title = "Anasayfa";
    Layout = "_Layout";
    Regex regex = new Regex("<[^>]*>");
}
<div style="background-color:" class="col-md-8">

    <h1 class="my-4">
        <b > Son Paylaşılan Makaleler</b>
    </h1>
    
   @foreach (var article in Model.Articles)
   {
       <!-- Blog Post -->
       <div class="card mb-4">
           <img class="card-img-top" src="~/img/@article.Thumbnail" alt="@article.Title">
           <div class="card-body">
               <h2 class="card-title">@article.Title</h2>
               <p class="card-text">
                   @{
                       article.Content = regex.Replace(article.Content, "");
                   }
                   @(article.Content.Length>250 ? article.Content.Substring(0,250) : article.Content)
               </p>
               <a style="background-color:yellow" href="/Article/Detail?articleId=@article.Id"  class="btn btn-primary"><p style="color:black">Daha fazla oku &rarr;</p></a>

           </div>
           <div style="background-color:#007bff"class="card-footer text-muted">
                <p style="color:white">  @article.User.UserName tarafından @article.Date tarihinde paylaşıldı.</p>
           </div>
       </div>
   }

    <!-- Pagination -->
    <ul class="pagination justify-content-center mb-4">
        <li class="page-item">
            <a class="page-link" href="#">&larr; Eski</a>
        </li>
        <li class="page-item disabled">
            <a class="page-link" href="#">Yeni &rarr;</a>
        </li>
    </ul>

</div>