@using System.Text.RegularExpressions
@model BloggerWay.Entities.Dtos.ArticleListDto
@addTagHelper*,*;
@{
    ViewBag.Title = "Anasayfa";
    Layout = "_Layout";
    Regex regex = new Regex("<[^>]*>");
}

<div style="color:black" class="col-md-8">

    <h1 class="my-4">
        Son Paylaşılan Makaleler
    </h1>

    @foreach (var article in Model.Articles)
   {
       <!-- Blog Post -->
       <div class="card mb-4">
           <img class="card-img-top" src="~/img/@article.Thumbnail" alt="@article.Title">
           <div class="card-body">
               <h2 class="card-title">@article.Title</h2>
               <p class="card-text">
                   @{
                       article.Content = regex.Replace(article.Content, "");
                   }
                   @(article.Content.Length>250 ? article.Content.Substring(0,250) : article.Content)
               </p>
               <a style="background-color:#c47941" href="/Article/Detail?articleId=@article.Id"  class="btn btn-primary"><p style="color:white">Daha fazla oku &rarr;</p></a>

           </div>
           <div style="background-color:#487a7a"class="card-footer text-muted">
                <p style="color:white">  @article.User.UserName tarafından @article.Date tarihinde paylaşıldı.</p>
           </div>
       </div>
   }

    <!-- Pagination -->
<ul class="pagination justify-content-center mb-4">
    @{
                    @if (Model.ShowPrevious)
                    {
        @if (Model.CategoryId != null)
        {
<li class="page-item">
    <a class="page-link" href="?~/currentPage=@(Model.CurrentPage-1)" href="?~/categoryId=@Model.CategoryId.Value">&larr; Eski</a>
</li> }
                else
                {
<li class="page-item">
    <a class="page-link" href="?currentPage=@(Model.CurrentPage-1)">&larr; Eski</a>
</li>}

                    }
                                @for (var i = 1; i <= Model.TotalPages; i++)
                                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        @if (Model.CategoryId != null)
                        {
        <a class="page-link" href="?currentPage=@i" asp-route-categoryId="@Model.CategoryId.Value">@i</a> }
                        else
                        {

        <a class="page-link" href="?currentPage=@i">@i</a>}
                    </li>}
        @if (Model.ShowNext)
        {
            @if (Model.CategoryId != null)
            {
                <li class="page-item">
                    <a class="page-link" href="?currentPage=@(Model.CurrentPage+1)" href="?categoryId=@Model.CategoryId.Value">Yeni &rarr;</a>
                </li> }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="?currentPage=@(Model.CurrentPage+1)">Yeni &rarr;</a>
                </li>}

        }
    }
</ul>

</div>