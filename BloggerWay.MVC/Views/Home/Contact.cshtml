@model BloggerWay.Entities.Dtos.EmailSendDto
@{
    Layout = "_ContactLayout";
    ViewBag.Title = "İletişim";
    ViewBag.Author = "BloggerWay";
    ViewBag.Description = "Bizlerle iletişime geçin. BloggerWay";
    ViewBag.Tags = "Contact, Contact Us, Bizle İletişime Geçin, İletişim";
}
<div class="container contact-form">
    <div class="contact-image">
        <img src="https://i.imgur.com/ne2J5E6.png" alt="rocket_contact"/>
    </div>
    <form asp-controller="Home" asp-action="Contact" method="post">
        <h3 style="color:#182539">Bizlere bir mesaj bırakın</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="İsminiz" asp-for="Name" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="E-Posta Adresiniz" asp-for="Email" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Konu / Başlık" asp-for="Subject" />
                </div>
                <div class="form-group">
                    <button style="background-color:#182539" type="submit" class="btnContact">Gönder</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea class="form-control" placeholder="Mesajınız..." asp-for="Message" style="width: 100%; height: 150px;"></textarea>
                </div>
            </div>
        </div>
    </form>
</div>