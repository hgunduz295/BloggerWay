@model BloggerWay.MVC.Models.ArticleDetailRightSideBarViewModel
<div class="col-md-3">

    <div style="background-color: whitesmoke" class="card my-auto">
        <img  style="background-color:darkslategrey" src="~/img/@Model.User.Picture" class="card-img-top text-center image-thumbnail mt-1 mb-1" alt="@Model.User.UserName" />
        <h5  style="background-color:darkslategrey"   class="text-center"><a style="color:white">@Model.User.UserName</a></h5>
        <div  class="card-body">
            <p style="color:black" class="card-text text-center">@Model.User.About</p>
            <br />
            <div  class="card-footer text-center">
                <p  style="color:#c47941">Sosyal Medya Linkleri</p>
                @if (Model.User.LinkedInLink != null)
                {
            <a href="@Model.User.LinkedInLink"><span class="fab fa-linkedin"></span></a>}
                @if (Model.User.GitHubLink != null)
                {
            <a href="@Model.User.GitHubLink"><span class="fab fa-github-square"></span></a>}
                @if (Model.User.TwitterLink != null)
                {
            <a href="@Model.User.TwitterLink"><span class="fab fa-twitter-square"></span></a>}
                @if (Model.User.FacebookLink != null)
                {
            <a href="@Model.User.FacebookLink"><span class="fab fa-facebook-square"></span></a>}
                @if (Model.User.InstagramLink != null)
                {
            <a href="@Model.User.InstagramLink"><span class="fab fa-instagram-square"></span></a>}
                @if (Model.User.YoutubeLink != null)
                {
            <a href="@Model.User.YoutubeLink"><span class="fab fa-youtube-square"></span></a>

                }
                @if (Model.User.WebsiteLink != null)
                {
                    <a href="@Model.User.WebsiteLink"><span class="fas fa-home"></span></a>

                }
            </div>
        </div>
    </div>

    <!-- Side Widget -->
    <br />
     <div style="background-color:whitesmoke" class="widget widget-catgs my-4">
        <h5 style="color:darkslategrey" class="widget-title">@Model.Header</h5>
        <br />
        <br />
         <div style="background-color: black"class="catgs-links">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        @for (int i = 0; i < Model.ArticleListDto.Articles.Count; i++)
                        {
                            if (i % 2 == 0)
                            {
            <li style="background-color: whitesmoke" class="list-group-item list-group-item-primary">
                <a style="color:black" asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
            </li> }
                            else
                            {
            <li  style="background-color: whitesmoke" class="list-group-item list-group-item-info">
                <a style="color:#c47941" asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
            </li>}
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>